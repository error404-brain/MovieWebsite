@model List<MovieWedsite.Models.theLoaiPhim>

<div class="list-group the-loai-phim">
    <div class="header">
        <strong>Thể Loại Phim</strong>
        <button class="btn btn-link text-white float-end" type="button" data-bs-toggle="collapse" data-bs-target="#theLoaiList" aria-expanded="false" aria-controls="theLoaiList">
            <i class="fa fa-chevron-down"></i>
        </button>
    </div>
    <div id="theLoaiList" class="collapse">
        @for (int i = 0; i < Model.Count();i++)
        {
            var item = Model[i];
            string display_class;
            if(i < 20)
            {
                display_class = "";
            }
            else
            {
                display_class = "hidden";
            }
            <a href="~/TheLoaiPhim/show_phim_the_Loai/@item.MaTheLoai" class="list-group-item list-group-item-action @display_class">
                @item.TenTheLoai
            </a>
        }
            <div class="text-center bg-dark">
                <a class="justify-content-center text-center see-more btn btn-dark" onclick="seeMore" id="see-more">Xem thêm</a>
            </div>
       
    </div>
</div>

<script>
    $(document).ready(function ()
    {
        var seeMoreButton = $('#see-more');
        var hiddenItems = $('.list-group-item.list-group-item-action.hidden');

        seeMoreButton.click(function () {
            hiddenItems.removeClass('hidden');
            seeMoreButton.hide();
        });
    });
</script>

<style>

    .hidden
    {
        display:none;
    }

    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .the-loai-phim {
        background-color: #808080;
        border: 1px solid #ddd;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

        .the-loai-phim .header {
            padding: 15px;
            background-color: #000000;
            color: #fff;
            font-size: 1.2em;
            border-bottom: 1px solid #ddd;
            text-align: center;
            font-family: 'Times New Roman';
            position: relative;
        }

            .the-loai-phim .header .btn {
                position: absolute;
                top: 50%;
                right: 10px;
                transform: translateY(-50%);
                font-size: 1em;
                padding: 0;
            }

        .the-loai-phim .list-group-item {
            border: none;
            padding: 10px 15px;
            font-size: 1.1em;
            transition: background-color 0.3s, color 0.3s;
        }

            .the-loai-phim .list-group-item:hover {
                background-color: #007bff;
                color: #fff;
            }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var chevronIcon = document.querySelector('.the-loai-phim .header .btn i');
        var theLoaiList = document.getElementById('theLoaiList');

        theLoaiList.addEventListener('shown.bs.collapse', function () {
            chevronIcon.classList.remove('fa-chevron-down');
            chevronIcon.classList.add('fa-chevron-up');
        });

        theLoaiList.addEventListener('hidden.bs.collapse', function () {
            chevronIcon.classList.remove('fa-chevron-up');
            chevronIcon.classList.add('fa-chevron-down');
        });
    });
</script>
